<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reportedProblemActivity">

<androidx.cardview.widget.CardView
    android:id="@+id/navCard"
    android:layout_width="0dp"
    android:layout_height="60dp"
    android:backgroundTint="#72BD75"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

  <ImageButton
      android:id="@+id/backBtn_reportedProblemPg"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:background="#72BD75"
      android:contentDescription="@string/back_button"
      android:src="@drawable/baseline_arrow_back_24" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginStart="80dp"
      android:text="Reported Problem"
      android:textSize="25sp"
      android:textStyle="bold" />
</androidx.cardview.widget.CardView>

<androidx.appcompat.widget.LinearLayoutCompat
    android:id="@+id/linearLayoutCompat2"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="#99D5D8"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/navCard"
    app:layout_constraintVertical_bias="0.0">
  <TextView
      android:id="@+id/processingTV_reportedProblemPg"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:visibility="gone"/>
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/appViewRV_reportedProblemPg"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>
</androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>