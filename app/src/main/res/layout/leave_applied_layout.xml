<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout_leaveApplied"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/tickAnimation"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/tick_animation" />
        <TextView
            android:id="@+id/title_LeaveApplied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#339437"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout_leaveApplied"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginTop="310dp">
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#4CAF50"
            android:layout_alignParentTop="true"
            app:cardCornerRadius="40dp"
            android:layout_centerInParent="true">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/baseline_keyboard_arrow_up_24"
                android:background="#4CAF50"/>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:background="#4CAF50"
            android:elevation="2dp">
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true">
                <TableRow>
                    <TextView
                        android:id="@+id/text_R1C1"
                        android:textStyle="bold"
                        android:gravity="end"/>
                    <TextView
                        android:text="    "/>
                    <TextView
                        android:id="@+id/text_R1C2"
                        android:layout_column="3"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/text_R2C1"
                        android:textStyle="bold"
                        android:gravity="end"/>
                    <TextView
                        android:id="@+id/text_R2C2"
                        android:layout_column="3"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/text_R3C1"
                        android:textStyle="bold"
                        android:gravity="end"/>
                    <TextView
                        android:id="@+id/text_R3C2"
                        android:layout_column="3"/>
                </TableRow>
            </TableLayout>
            <Button
                android:id="@+id/goToHomeBtn_LeaveApplied"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="90dp"
                android:backgroundTint="#CDDC39"
                android:text="Go To Home"
                android:textSize="18sp" />
            <Button
                android:id="@+id/gotItBtn_LeaveApplied"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#CDDC39"
                android:text="Got It"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>