<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".moreOptionsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/navCard"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#72BD75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backBtnMoreOptionPg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#72BD75"
            android:contentDescription="@string/back_button"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="80dp"
            android:text="More Options"
            android:textSize="25sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border_20dp_blue"
        android:padding="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navCard">
        <TextView
            android:id="@+id/editProfileTV_MoreOptionPg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:background="#DDDCDC"
            android:gravity="center"
            android:text="@string/edit_my_profile"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FF909090" />

        <TextView
            android:id="@+id/contactUsTV_MoreOptionPg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:background="#DDDCDC"
            android:gravity="center"
            android:text="Contact Us"/>

        <LinearLayout
            android:id="@+id/contactUsLL_MoreOptionPg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:id="@+id/emailTV_MoreOptionPg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:gravity="center"
                android:text="@string/email"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#FF909090"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"/>

            <TextView
                android:id="@+id/callTV_MoreOptionPg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:gravity="center"
                android:text="@string/call"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FF909090" />

        <TextView
            android:id="@+id/reportProblem_MoreOptionPg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:background="#DDDCDC"
            android:gravity="center"
            android:text="@string/report_a_problem"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FF909090" />
        <TextView
            android:id="@+id/activeEmployees_MoreOptionPg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:background="@drawable/border_2dp_green"
            android:gravity="center"
            android:visibility="gone"
            android:text="Active Employees"/>
        <TextView
            android:id="@+id/addNewEmployee_MoreOptionPg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:background="@drawable/border_2dp_green"
            android:gravity="center"
            android:visibility="gone"
            android:text="Add New Employee"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/forwardApp_CL_MoreOptionPg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/border_2dp_green">
            <TextView
                android:id="@+id/forwardApp_TV_MoreOptionPg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:text="Forword Application"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#F42C2C"
                app:cardCornerRadius="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/forwardApp_TV_MoreOptionPg"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/forwardAppNewNumber_TV_MoreOptionPg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:visibility="gone"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>