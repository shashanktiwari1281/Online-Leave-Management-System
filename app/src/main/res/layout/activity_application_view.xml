<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".applicationViewActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/navCard"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="#72BD75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
          android:id="@+id/backBtnAppViewPg"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:background="#72BD75"
          android:contentDescription="@string/back_button"
          android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:id="@+id/titleAppViewPg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="80dp"
            android:maxLines="1"
            android:textSize="25sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navCard"
        app:layout_constraintVertical_bias="0.0">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="Applied On:"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/applyDateAppViewPg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="Reporting To:"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/reportingToAppViewPg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="Leave Category:"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/leaveCategoryAppViewPg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="Leave Type:"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/leaveTypeAppViewPg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="Leave Date:"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/leaveDateAppViewPg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/empNameLabelAppViewPg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="Employee Name:"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/empNameAppViewPg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/empIdLabelAppViewPg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="Employee Id:"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/empIdAppViewPg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/lvStatusLabelAppViewPg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="Leave Status:"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/lvStatusAppViewPg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/rejectReasonLabelAppViewPg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:visibility="gone"
                android:text="Rejection Reason:"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/rejectionReasonAppViewPg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#F44336"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
            <TextView
                android:id="@+id/lvDescLabelAppViewPg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="Leave Reason:"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/lvDescAppViewPg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

            <TextView
                android:id="@+id/docAttachedLabelAppViewPg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="Document Attached:"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"/>

            <ImageView
                android:id="@+id/docAttachedAppViewPg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_2dp_green"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:scaleType="fitXY"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

  </androidx.constraintlayout.widget.ConstraintLayout>